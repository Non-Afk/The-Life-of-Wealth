<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".weeklyActivity"
    android:orientation="vertical">

    <TextView
    android:id="@+id/calories_consume"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:textColor="#F44336">
</TextView>

    <TextView
        android:id="@+id/meal_consume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp">
    </TextView>

    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px">
    </TextView>

    <TextView
        android:id="@+id/money_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The money you still have after doing the plan:"
        android:textSize="20dp">
    </TextView>

    <TextView
        android:id="@+id/money_left_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="200px"
        android:textColor="#F44336">
    </TextView>

</LinearLayout>